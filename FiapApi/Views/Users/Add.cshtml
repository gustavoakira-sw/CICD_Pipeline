@model FiapApi.Models.AddUserViewModel

<!DOCTYPE html>

<html>
<head>
    <title>Add User</title>
</head>
<body>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" asp-for="Name"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="Email" asp-for="Email"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Key</label>
        <input type="text" class="form-control" name="Key" asp-for="Key"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Role</label>
        <input type="text" class="form-control" name="Role" asp-for="Role"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" name="Password" asp-for="Password"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
</body>
</html>